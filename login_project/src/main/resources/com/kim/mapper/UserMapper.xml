<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kim.mapper.UserMapper">

	<select id="getUser" parameterType="java.lang.String"
		resultType="com.kim.model.User">
		SELECT * FROM member_tbl WHERE id = #{id}
	</select>

	<insert id="insertUser">
		insert into member_tbl values(#{id}, #{pass}, #{zip},
		#{addr1}, #{addr2}, #{phone}, #{email})
	</insert>

	<update id="updateUser" parameterType="com.kim.model.User">
		update member_tbl set
		pass = #{pass},
		zip = #{zip},
		addr1 = #{addr1},
		addr2 = #{addr2},
		phone = #{phone},
		email = #{email}
		where id = #{id}
	</update>

	<select id="getUserList" resultType="com.kim.model.User">
		select * from member_tbl
		order by no asc
	</select>

	<delete id="deleteUser">
		delete from member_tbl where id = ?
	</delete>

	<select id="findId" resultType="com.kim.model.User">
		select * from member_tbl where
		name=? and email=?
	</select>
	<select id="findPass" resultType="com.kim.model.User">
		select * from member_tbl where
		id=? and email=?
	</select>
	<select id="getAdminPage" resultType="com.kim.model.User">
		select * from member_tbl
		where role = 'admin' order by no asc
	</select>



</mapper>