<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-5.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- *비밀번호 암호화를 위한 인코더* -->
	<bean id="bCryptPasswordEncoder"
		class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder">

	</bean>

	<bean id="accessDeniedHandler"
		class="org.zerock.security.CustomAccessDeniedHandler">
	</bean>

	<bean id="customLoginSuccessHandler"
		class="org.zerock.security.CustomLoginSuccessHandler"></bean>

	<bean id="customUserDetailsService"
		class="org.zerock.security.CustomUserDetailsService" />


	<security:http> <!-- pattern="무슨 URL"을 access="무슨 권한을" -->
		<security:intercept-url pattern="/sample/all"
			access="permitAll" />
		<security:intercept-url
			pattern="/sample/member" access="hasRole('ROLE_MEMBER')" />
		<security:intercept-url pattern="/sample/admin"
			access="hasRole('ROLE_ADMIN')" />

		<security:csrf disabled="true" /> <!-- post 요청 할 때 csrf 대신 기입 -->

		<security:form-login login-page="/customLogin"
			authentication-success-handler-ref="customLoginSuccessHandler" />


		<security:logout logout-url="/customLogout"
			invalidate-session="true" />

		<security:access-denied-handler
			ref="accessDeniedHandler" />

	</security:http>


	<security:authentication-manager>
		<security:authentication-provider
			user-service-ref="customUserDetailsService">
			<security:password-encoder
				ref="bCryptPasswordEncoder" />

			<!-- <security:user-service> <security:user name="member" authorities="ROLE_MEMBER" 
				password="{noop}1234" /> <security:user name="admin" authorities="ROLE_MEMBER, 
				ROLE_ADMIN" password="{noop}1234" /> </security:user-service> -->
		</security:authentication-provider>
	</security:authentication-manager>

</beans>
